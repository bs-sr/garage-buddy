<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card card-body main-color-bg dark-shade">
      <h3 class="mx-auto">New Car Project</h3>
      <form action="/projects" method="post" class="add-vehicle">
        <div class="form-group col-md-4">
          <div for="year">Year</div>
          <select name="year" id="year-dropdown"></select>
        </div>
        <div class="form-group col-md-4">
          <div for="make">Make</div>
          <select name="make" id="make-dropdown"></select>
        </div>
        <div class="form-group col-md-4">
          <div for="model">Model</div>
          <select name="model" id="model-dropdown"></select>
        </div>
        <div class="form-group">
          <label for="plans">Plans</label>
          <textarea id="plans" class="form-control dark-shade" name="plans" autocomplete="off">{{plans}}</textarea>
        </div>
        <button type="submit" class="btn dark-accent-bg light-shade">Submit</button>
      </form>
    </div>
  </div>
</div>

